<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <div class="form-container">
        <div class="form-group">
          <h1>Restaurant</h1>
        </div>
        <%= simple_form_for(@restaurant) do |f| %>
        <div class="form-group">
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :phone_number %>
          <%= f.input :category %>
        </div>
        <div class="form-group">
          <%= f.submit "add a restaurant", class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
