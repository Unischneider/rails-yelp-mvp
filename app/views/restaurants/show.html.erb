
<div class="container">
  <h1><%= @restaurant.name %></h1>
  <div class="row">
    <div class="col-xs-4 column-offset-3">
      <h3><%= @restaurant.address %></h3>
      <h3><%= @restaurant.phone_number %></h3>
      <h3><%= @restaurant.category %></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4 column-offset-3">
      <ul>
        <% @restaurant.reviews.each do |review| %>
        <li>
          <p><%= review.content %></p>
          <p><%= review.rating %></p>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4 column-offset-3">
      <%= link_to "add review",  new_restaurant_review_path(@restaurant) %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4 column-offset-3">
      <%= link_to "Go back to start",  root_path %>
    </div>
  </div>
</div>
